        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- StartFrame - Animated Curved Frame around Main when Nav is displayed -->
        <ImageView
            android:id="@+id/FrameArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:contentDescription="@string/name"
            android:src="@drawable/frame" />
        <!-- EndFrame -->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include android:id="@+id/AboutPage" layout="@layout/about" android:x="600dp" android:visibility="gone"/>
    <include android:id="@+id/AdvancedPage" layout="@layout/advanced" android:x="600dp" android:visibility="gone"/>
    <include android:id="@+id/ConfigPage" layout="@layout/configuration" android:x="600dp" android:visibility="gone"/>
    <include android:id="@+id/LogsPage" layout="@layout/logs" android:x="600dp" android:visibility="gone"/>
    <include android:id="@+id/LogPage" layout="@layout/log" android:x="600dp" android:visibility="gone"/>
    <include android:id="@+id/IdentityPage" layout="@layout/identities" android:x="600dp" android:visibility="gone"/>
    <include android:id="@+id/IdentityDetailsPage" layout="@layout/identity" android:x="600dp" android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>